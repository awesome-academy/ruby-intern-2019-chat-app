<div class="modal fade" id="form-search-user" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title" id="exampleModalLabel"><%= t("modal.modal_search_user.title") %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag search_users_path, method: :get, remote: true do %>
          <%= email_field_tag :email,nil, :class => "form-control", placeholder: "Email"%>
          <%= submit_tag t("modal.modal_search_user.search_button"), :class => "btn btn-primary" %>
        <% end %>
        <div id="content">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t("modal.close") %></button>
      </div>
    </div>
  </div>
</div>
