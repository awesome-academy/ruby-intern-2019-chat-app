<div class="card card-user">
  <%= image_tag "avatar_default.png", class: "card-img-top rounded-circle", size: Settings.carduser.size_image %>
  <div class="card-body text-center">
    <h4 class="card-title"><%= user.email %></h4>
    <p class="card-text"><%= user.name %></p>
    <p class="card-text"><%= user.username %></p>
    <p class="card-text"><%= user.gender %></p>
    <p class="card-text"><%= user.birthday %></p>
    <p><%= Contact.check_exist_status_contact(current_user.id, user.id) %></p>
    <% if current_user.id == user.id %>

    <% elsif Contact.check_exist_status_contact(current_user.id, user.id) == 0 %>
      <%= link_to t("user.card_user.add_friend"), add_friend_path(contact: {request_receiver_id: user.id, status: 0}), method: :post,class: "btn btn-primary", remote: true, id: "add_user_#{user.id}" %>
      <%= link_to t("user.card_user.waiting_confirm"), "#", class: "btn btn-secondary disabled", id:"waiting_request_user_#{user.id}", style: "display: none"%>
    <% end %>
  </div>
</div>
